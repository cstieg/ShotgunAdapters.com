@model ShotgunAdapters.Models.Product

<article class="col-xs-12 col-sm-4 col-md-3 col-lg-3 product-item"
         onmouseover="$(this).addClass('selected');"
         onmouseout="$(this).removeClass('selected');">
    <div class="image-wrapper" onclick="buyNow(@Model.Id)">
        <img class="product-image" src="@Model.ImageUrl" srcset="@Model.ImageSrcSet" alt="@Model.Name image" />
    </div>
    <h4 class="product-name">@Model.Name</h4>
    <p class="product-description">@Model.Description</p>
    <p class="product-price">$@Model.Price</p>
    <div class="button-container centered">
        <button class="btn buy-now" onclick="buyNow(@Model.Id)">Buy Now</button>
        <br />
        <button class="btn add-to-shopping-cart" onclick="addToShoppingCart(@Model.Id)">Add to Shopping Cart</button>
    </div>
</article>

