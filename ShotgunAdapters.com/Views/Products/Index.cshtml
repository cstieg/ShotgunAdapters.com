@model IEnumerable<ShotgunAdapters.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Shipping)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayOnFrontPage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoNotDisplay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmmunitionCaliber.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GunCaliber.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Shipping)
        </td>
        <td>
            <img src="@item.ImageUrl" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayOnFrontPage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DoNotDisplay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmmunitionCaliber.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GunCaliber.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
