@model IEnumerable<ShotgunAdapters.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" data-interval="5000" data-ride="carousel" class="carousel slide">
    <!-- Carousel indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Carousel items -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/images/SampleSlide.png" alt="First slide">
            <div class="carousel-caption">Shoot smaller gauge shells, rifle, pistol ammo in your shotgun</div>
        </div>
        <div class="item">
            <img src="~/Content/images/SampleSlide.png" alt="Second slide">
            <div class="carousel-caption">Drop-in sleeve quickly converts a shotgun chamber to shoot down-sized ammo.</div>
        </div>
        <div class="item">
            <img src="~/Content/images/SampleSlide.png" alt="Third slide">
            <div class="carousel-caption">This Caption 3</div>
        </div>
    </div>
    <!-- Carousel nav -->
    <a class="carousel-control left" href="#myCarousel"
       data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#myCarousel"
       data-slide="next">&rsaquo;</a>
</div>

<section id="featured-products" class="row">
    <h2>Featured Products</h2>
    @foreach (var product in Model)
    {
        @Html.Partial("_ProductPartial", product)
    }
</section>

